{
  "name": "@dreamer/test",
  "version": "1.0.5",
  "license": "MIT",
  "exports": { ".": "./src/mod.ts", "./browser": "./src/browser/index.ts" },
  "publish": {
    "include": ["src/**/*.ts", "LICENSE.md", "README.md"],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**",
      "package.json"
    ]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-unresolved"]
    }
  },
  "imports": {
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.4",
    "@dreamer/esbuild": "jsr:@dreamer/esbuild@^1.0.6",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0",
    "playwright": "npm:playwright@1.58.2"
  },
  "nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.27.2", "npm:playwright@1.58.2"]
  }
}
